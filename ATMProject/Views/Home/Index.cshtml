<!DOCTYPE html>
<html ng-app="ATMProject" ng-controller="LandingPageController">
<head>
    <base href="/">
    <title ng-bind="models.title"></title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">       
        <a class="navbar-brand" href="#">ATMProject</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav navbar-toggler-right">                
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item na">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item na">
                        <a class="nav-link" href="/login">Login</a>
                    </li>                    
                }                
            </ul>
        </div>
    </nav>
   
    <div class="container mainContent">      
            <div ng-view=""></div>              
    </div>
    @Scripts.Render("~/bundles/Angular")
    @Scripts.Render("~/bundles/Bootstrap")
    @Scripts.Render("~/bundles/ATMProject")
</body>
</html>